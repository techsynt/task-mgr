<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Управление задачами{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/bootstrap.css') }}">
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/bootstrap.js') }}"></script>
        {% endblock %}
    </head>
        {% block header %}
            <header class="bg-dark text-white p-3 container-md">
                <div class="container-md">
                    <h1>Управление задачами</h1>
                    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                        <!-- Navbar content goes here -->
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_browse') }}">Главная</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_registration') }}">Регистрация</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_login') }}">Войти</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </header>
        {% endblock %}
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
