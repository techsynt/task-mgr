{% extends 'base.html.twig' %}

{% block javascripts%}
    {{ parent() }}
    {{ encore_entry_script_tags('addTask') }}
{% endblock %}
{% block stylesheets%}
    {{ parent() }}
    {{ encore_entry_link_tags('datepicker') }}
{% endblock %}

{% block body %}
    <div class="container text-center ">
        <div class="row" >
            <div class="col-3 border">
                <b>Выберите дату для задачи</b>
                <div class="js-datepicker m-lg-5 card" id="datepicker"></div>
            </div>
            <div class="d-flex col border align-items-center justify-content-center">
                <div class="col-8">
                    {{ form_start(form) }}
                    <span id="span1">Выберите на календаре дату для задачи</span>
                    {{ form_row(form.createdAt) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}



